<%= form_for [:admin, @user] do |f| %>
<h1>Add a new user <%= link_to "Back &crarr;".html_safe, admin_users_path, class: "btn btn-default btn-lg" %></h1>
<div class="row">
  <div class="col-md-6">
    <%= f.email_field :email, class: "form-control form-ecart", :placeholder => "Email" %>
    <%= select_tag(:nothing, {}, :class => "form-control") %>
  </div>
  <div class="col-md-6">
    <%= f.password_field :password, class: "form-control form-ecart", :placeholder => "Password" %>
    <%= f.submit "Save &raquo;".html_safe, :class => "btn btn-success btn-block" %>
  </div>
</div>
<% end %>
