<h1 class="mh2" style="margin: 20px 0px 0px 0px;text-align:left;">
    Mikan - Administration
</h1>
<hr class="hr2" style="margin-top:0px;" />

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="row">
    <div class="col-md-6">
        <div class="form-signin">
            <%= f.text_field :email, :autofocus => true, :placeholder => "Email address", :class => "form-control form-ecart" %>
            <%= f.password_field :password , :placeholder => "Password", :class => "form-control" %>
        </div>
    </div>
    <div class="col-md-6">
        <%= f.submit "Login &raquo;".html_safe, :class => "btn btn-primary btn-block" %>
        <%= link_to "Back &crarr;".html_safe, root_path, :class => "btn btn-default btn-block" %>  
    </div>
</div>
<% end %>
