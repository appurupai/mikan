<h1 class="mh2" style="margin: 20px 0px 0px 0px;text-align:left;">
    <%= t('panel.login.title') %>
</h1>
<hr class="hr2" style="margin-top:0px;" />

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="row">
    <div class="col-md-6">
        <div class="form-signin">
            <%= f.text_field :email, :autofocus => true, :placeholder => t('panel.login.placeholder.email'), :class => "form-control form-ecart" %>
            <%= f.password_field :password , :placeholder => t('panel.login.placeholder.password'), :class => "form-control" %>
        </div>
    </div>
    <div class="col-md-6">
        <%= f.submit  t('button.login').html_safe, :class => "btn btn-primary btn-block" %>
        <%= link_to  t('button.back').html_safe, root_path, :class => "btn btn-default btn-block" %>
    </div>
</div>
<% end %>
