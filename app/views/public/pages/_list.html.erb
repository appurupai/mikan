<div class="col-md-3 col-sm-6 hero-feature">
    <div class="thumbnail">
        <%= image_tag(show.image_url(:list)) %>
        <div class="caption">
            <h3><%= show.title %></h3>
            <p><%= show.description %></p>
            <p>
                <%= item_link(t('seasons.hummingbird').html_safe, show.hummingbird_url, "btn btn-primary") %>
                <%= item_link(t('seasons.official_website').html_safe, show.official_url, "btn btn-default") %>
            </p>
        </div>
    </div>
</div>
