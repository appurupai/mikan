<% if @page.alert %>
<div class="notice notice-warning">
  <h1 style="margin:0;"><%= @page.title %></h1>
  <p><%= @page.content.html_safe %></p>
</div>
<% end %>

<% if @view %>
<header class="notice notice-info">
  <h1>Mikan : <%= @season.title %></h1>
  <p><%= @season.notice.html_safe %></p>
  <p><%= link_to t('seasons.suggest').html_safe, contact_path, class: "btn btn-primary" %></p>
</header>

<div class="row">
  <div class="col-lg-7">
    <h3><%= t('seasons.shows') %></h3>
  </div>
  <div class="col-lg-5">
    <div class="btn-group" style="margin-top:15px;">
      <%= link_to t('seasons.order.alphabetical'), params.merge(:order => "title"), class: "btn btn-default" %>&nbsp;
      <%= link_to t('seasons.order.airing'), params.merge(:order => "airing_from"), class: "btn btn-default" %>&nbsp;
      <%= link_to t('seasons.order.latest'), params.merge(:order => "created_at"), class: "btn btn-default" %>&nbsp;
    </div>
  </div>
</div>
<hr />
<div class="row text-center">
  <% @animes.each do |show| %>
  <%= render "list", :show => show %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h3><%= t('seasons.specials') %></h3>
  </div>
</div>
<hr />
<div class="row text-center">
<% @specials.each do |show| %>
<%= render "list", :show => show %>
<% end %>
</div >

<div class="row">
  <div class="col-lg-12">
    <h3><%= t('seasons.movies') %></h3>
  </div>
</div>
<hr />

<div class="row text-center">
<% @movies.each do |show| %>
<%= render "list", :show => show %>
<% end %>
</div>
<% else %>
<p><%= t('seasons.empty') %></p>
<% end %>
